<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_upper"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="18sp"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toStartOf="@id/iv_speak"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/iv_speak"
        tools:text="Foreign word" />

    <TextView
        android:id="@+id/tv_downer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:tag="text_beta"
        android:textColor="@color/gray600"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_upper"
        tools:text="Native translation" />

    <ImageView
        android:id="@+id/iv_speak"
        android:layout_width="32dp"
        android:layout_marginEnd="12dp"
        android:layout_height="32dp"
        app:tint="@color/violet"
        android:src="@drawable/ic_play"
        app:layout_constraintEnd_toStartOf="@id/iv_learned"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_learned"
        android:layout_width="60dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_downer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_upper"
        tools:src="@drawable/ic_learned" />

</androidx.constraintlayout.widget.ConstraintLayout>