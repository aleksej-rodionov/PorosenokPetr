<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_text"
        style="@style/Italic16Black"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="12dp"
        android:paddingVertical="16dp"
        app:layout_constraintEnd_toStartOf="@+id/iv_check"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/ukrainian_ua" />

    <ImageView
        android:id="@+id/iv_check"
        android:layout_width="64dp"
        android:layout_height="0dp"
        android:paddingHorizontal="12dp"
        android:paddingVertical="16dp"
        android:src="@drawable/ic_learned"
        app:layout_constraintBottom_toBottomOf="@+id/tv_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/learned_language_settings" />

</androidx.constraintlayout.widget.ConstraintLayout>