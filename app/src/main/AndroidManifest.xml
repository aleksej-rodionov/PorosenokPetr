<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="space.rodionov.porosenokpetr">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".main.PorosenokPetrApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="${appIcon}"
        android:usesCleartextTraffic="true"
        android:label="${variant}"
        android:roundIcon="${appIconRound}"
        android:supportsRtl="true"
        android:theme="@style/Theme.PorosenokPetr"
        tools:targetApi="32">

        <activity
            android:name=".feature_launcher.presentation.LauncherActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.PorosenokPetr">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".main.presentation.RootActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.PorosenokPetr">
        </activity>

    </application>
</manifest>